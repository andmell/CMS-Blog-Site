<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css"
    />
    <link rel="stylesheet" href="/Stylesheets/main.css" />
    <title>View Post</title>
  </head>
  <body>
    <main class="section">
      {{#each posts as |post|}}
        <h2>Created by {{user.username}} on {{this.createdAt}}</h2>
        <h1 class="title">{{this.title}}</h1>
        <h3 class="subtitle">{{this.body}}</h3>
        <article class="media">
          <div class="">
            <div class="">
              {{#each comments as |comment|}}
                <div class="media-content">
                  <div class="content">
                    <p>
                      <strong>{{user.username}} on {{this.createdAt}}</strong>
                      <br />
                      {{comment.body}}
                    </p>
                  </div>
                </div>
              {{/each}}
            </div>
          </div>
        </article>
         <section id="make-Comment">
        <h2>Make a Comment</h2>
        <form action="/api/posts/{{id}}" method="POST">
            <div>
                <textarea
                name="body"
                id="body"
                cols="30"
                rows="1"
                placeholder="Content"
                class="textarea is-primary"
                ></textarea>
            </div>
            <div>
                <button type="submit" class="button is-light is-small">Submit</button>
            </div>
        </form>
    </section>
      {{/each}}
    </main>
  </body>
</html>