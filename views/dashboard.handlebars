{{!-- Needs to include user's posts, button to add new post. --}}
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css"
    />
    <link rel="stylesheet" href="../public/Stylesheets/main.css" />
    <title>Your Posts</title>
  </head>
  <body>
    {{#if posts.length}}
<section>
    <h2>Your Dashboard</h2>
    <ul class="post-list">
        {{#each posts as |post|}}
        <article class="post">
    <div class="whole-post">
        <div class="info-section">
            <div class="post-name">
                <a href="/api/posts/{{id}}" class="links">{{title}}</a>
            </div>
            <div class="created-by">
                <p id="comment-subtitle">
                    Posted by <b>{{user.username}} </b> on <b>{{created_at}}</b>
                </p>
            </div>
        </div>
        <div class="content-section">
            <p>{{content}}</p>
        </div>
    </div>
</article>
        {{/each}}
    </ul>
</section>
{{/if}}
  </body>